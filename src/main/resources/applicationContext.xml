<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="pltPay2ecsp-dev" class="me.maxwell.tools.jms_bridge.GeneralMessageBridge">
        <constructor-arg name="srcName" value="src" />
        <constructor-arg name="srcUrl" value="tcp://192.168.1.197:61616?jms.alwaysSessionAsync=false&amp;jms.alwaysSyncSend=true" />
        <constructor-arg name="srcQueue" value="demo.src" />
        <constructor-arg name="dstName" value="dst" />
        <constructor-arg name="dstUrl" value="tcp://192.168.1.197:61616" />
        <constructor-arg name="dstQueue" value="demo.dst" />

        <property name="delayTimeOnError" value="30000" />
        <property name="epochDuration" value="900000" />
    </bean>

    <bean id="maintainContext" class="me.maxwell.tools.jms_bridge.MaintainContext">
        <constructor-arg name="bridges">
            <list>
                <ref bean="pltPay2ecsp-dev"/>
            </list>
        </constructor-arg>
    </bean>

</beans>